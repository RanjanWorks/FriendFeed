<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>feed</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/stylesheets/profile.css">

</head>
<body>

    <%- include('partials/header.ejs')%>

     <div class="posts">
        <% user.reverse().forEach(function(post){ %>
            <div class="post">
                <a href="/profile/<%= post.user.username %>" class="name_area">
                <img src="https://t4.ftcdn.net/jpg/03/64/21/11/360_F_364211147_1qgLVxv1Tcq0Ohz3FawUfrtONzz8nq3e.jpg" alt="">
                <p class="post_name"><%= post.user.username%></p>
    
                </a>
                <div class="postdiv">
                  <p><%= post.content%></p>
                </div>
                <div class="footer">
                 <div class="wrap">
                  <a href="/like/<%= post._id%>">
                    <i class='bx bx-heart' ></i>
                  </a>
                  <p class="like"><%= post.likes.length %> likes</p>
                 </div>
               <% if(edit){%>
                <div class="wrap">
                  <span style="cursor: pointer;" >
                    <i id="edit" data-id="<%= post._id %>" class='bx bx-message-square-edit'></i>
                  </span>
                    <a id="delete" href="/delete/<%= post._id %>">
                      <i class='bx bx-message-square-x'></i>        </a>
                 </div>
                <% }%>
                </div>
              </div>
           <%})%>
     
    </div>


     <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
  
</body>
</html>